extends layout.pug

block content
	div(class="row content-border")
		div(class="col")
			div(class="row")
				div(class="col")
					span awesome forum
			div(class="row")
				div(class="col")
					span awesome forum description
		div(class="col")
			div(class="row")
				div(class="col")
					div(class="row")
						span thread name
					div(class="row")
						span poster time

	each forum in forums
		div(class="forum")
			div(class="forum-title")
				a(href=forum[id]) #{forum}

			div(class="forum-description")
				#{forum[description]}

